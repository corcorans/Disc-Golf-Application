<%= button_to "Logout", sessions_path, :method => "delete" %>
<%= button_to "Statistics", statistics_path, :method => "index" %>

<h1>Listing players</h1>
<table border="1">
  <tr>
    <th>Player Name</th>
    <th>Date</th>
    <th>Course Name</th>
    <th>Course Par</th>
    <th>Course Score</th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%= player.name %></td>
    <td><%= player.date %></td>
    <td><%= player.course_name %></td>
    <td><%= player.par %></td>
    <td><%= player.score %></td>
    <td><%= link_to 'Show', player %></td>
    <td><%= link_to 'Edit', edit_player_path(player) %></td>
    <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Player', new_player_path %>